# ALT_LAS Environment Variables
# Bu dosyayı .env olarak kopyalayın ve değerleri güncelleyin

# API Gateway
NODE_ENV=development
JWT_SECRET=change_this_to_a_secure_random_string
REDIS_URL=redis://redis:6379
SEGMENTATION_SERVICE_URL=http://segmentation-service:8000
RUNNER_SERVICE_URL=http://runner-service:8080
ARCHIVE_SERVICE_URL=http://archive-service:9000
AI_ORCHESTRATOR_URL=http://ai-orchestrator:8001

# Segmentation Service
PYTHONUNBUFFERED=1
SEGMENTATION_PORT=8000
# NATS_URL=nats://nats:4222 # Eğer NATS kullanıyorsa

# Runner Service
RUST_LOG=info
RUNNER_AI_SERVICE_URL=http://ai-orchestrator:8001
# RUNNER_NATS_URL=nats://nats:4222 # Eğer NATS kullanıyorsa

# Archive Service
ARCHIVE_DATABASE_URL=postgres://alt_las_user:change_this_to_secure_password@postgres_db:5432/alt_las_archive_db?sslmode=disable
ARCHIVE_NATS_URL=nats://nats:4222
ARCHIVE_PORT=9000

# AI Orchestrator
AI_ORCHESTRATOR_PORT=8001
# OPENAI_API_KEY=your_openai_key_here # Örnek AI modeli için

# PostgreSQL
POSTGRES_USER=alt_las_user
POSTGRES_PASSWORD=change_this_to_secure_password
POSTGRES_DB=alt_las_archive_db

# Test Kullanıcısı
TEST_USERNAME=test@example.com
TEST_PASSWORD=change_this_to_secure_password
