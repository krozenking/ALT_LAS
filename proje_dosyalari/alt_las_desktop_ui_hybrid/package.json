{
  "name": "alt-las-desktop-ui",
  "version": "0.1.0",
  "description": "ALT_LAS Desktop UI with innovative drag-and-drop interface and glassmorphism effects",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "build": "webpack --config webpack.config.js",
    "package": "electron-builder",
    "make": "npm run build && electron-builder",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test && npm run test:e2e",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "ui",
    "glassmorphism",
    "drag-and-drop"
  ],
  "author": "Zeynep Arslan",
  "license": "MIT",
  "devDependencies": {
    "electron-builder": "^24.9.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "html-webpack-plugin": "^5.6.0",
    "@playwright/test": "^1.42.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^7.6.10",
    "@storybook/react-webpack5": "^7.6.10",
    "@storybook/test": "^7.6.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.10.6",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^5.62.0",
    "ajv": "^8.17.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^28.1.1",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.6.15",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "license-checker": "^25.0.1",
    "node-loader": "^2.0.0",
    "storybook": "^8.6.12",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/modifiers": "^7.0.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@types/react-window": "^1.8.8",
    "d3": "^7.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "framer-motion": "^6.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-icons": "^4.12.0",
    "react-query": "^3.39.3",
    "react-window": "^1.8.11",
    "recharts": "^2.15.3",
    "victory": "^36.9.2",
    "zustand": "^5.0.3"
  },
  "build": {
    "appId": "com.altlas.desktop",
    "productName": "ALT_LAS Desktop",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/icon.png"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "public/icon.icns"
    }
  }
}
