# Docker Compose Ortam Değişkenleri

# Genel Yapılandırma
ENVIRONMENT=production
TAG=latest

# Port Yapılandırması
FRONTEND_PORT=80
API_PORT=3000
AI_PORT=5000
DB_PORT=27017

# API Yapılandırması
API_URL=http://chat-api:3000
CORS_ORIGIN=*

# Veritabanı Yapılandırması
DATABASE_URL=mongodb://chat-db:27017/altlas
DB_USER=admin
DB_PASSWORD=password

# AI Servisi Yapılandırması
AI_SERVICE_URL=http://chat-ai:5000
OPENAI_API_KEY=your_openai_api_key

# Güvenlik
JWT_SECRET=your_jwt_secret

# Loglama
LOG_LEVEL=info
