# Üretim Ortamı Değişkenleri

# API Yapılandırması
VITE_API_BASE_URL=https://api.altlas.com/api
VITE_API_TIMEOUT=15000
VITE_API_RETRY_COUNT=2

# AI Yapılandırması
VITE_AI_SERVICE_URL=https://ai.altlas.com
VITE_DEFAULT_AI_MODEL=openai-gpt4
VITE_ENABLE_STREAMING=true
VITE_MAX_TOKENS=4096

# Dosya Yükleme Yapılandırması
VITE_MAX_FILE_SIZE=10485760 # 10MB
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,text/csv

# Ses Tanıma Yapılandırması
VITE_SPEECH_RECOGNITION_API=cloud
VITE_MAX_RECORDING_TIME=60000 # 60 saniye

# Uygulama Yapılandırması
VITE_APP_NAME=ALT_LAS Chat Botu
VITE_DEFAULT_LANGUAGE=tr
VITE_AVAILABLE_LANGUAGES=tr,en
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Depolama Yapılandırması
VITE_STORAGE_PREFIX=altlas_chat_
VITE_MAX_CONVERSATION_HISTORY=100

# Erişilebilirlik Yapılandırması
VITE_DEFAULT_FONT_SIZE=md
VITE_DEFAULT_HIGH_CONTRAST=false
VITE_DEFAULT_REDUCE_MOTION=false
VITE_DEFAULT_SCREEN_READER_MODE=false

# Tema Yapılandırması
VITE_DEFAULT_COLOR_MODE=light
VITE_DEFAULT_THEME=default

# Geliştirme Araçları
VITE_ENABLE_DEV_TOOLS=false
VITE_MOCK_API=false
VITE_LOG_LEVEL=error
