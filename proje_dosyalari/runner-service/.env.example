# .env.example for Runner Service
# This file contains all environment variables required by the Runner Service

# Server Configuration
BIND_ADDRESS=0.0.0.0:8080
LOG_LEVEL=info

# File Paths
ALT_FILES_DIR=./alt_files
LAST_FILES_DIR=./last_files
ARTIFACTS_DIR=./artifacts

# Service URLs
AI_SERVICE_URL=http://ai-orchestrator:8000
OS_INTEGRATION_URL=http://os-integration-service:8080

# Task Configuration
MAX_CONCURRENT_TASKS=4
MAX_CONCURRENT_AI_TASKS=4
AI_TIMEOUT_SECONDS=60

# Security
AUTH_TOKEN=your_auth_token_here

# Monitoring and Telemetry
ENABLE_TELEMETRY=true
TELEMETRY_ENDPOINT=http://telemetry-service:4318
